            </div>
%%          if ( $person ) {
            <div class="col">
                <a href="[% $c.url_for( 'user', { name => $person.username } ) %]">[% $person.username %]</a>
                <a href="[% $c.url_for( 'user_settings' ) %]">[% $gear_icon %]</a>
                
                <form method="post" action="[% $c.url_for( 'do_logout' ) %]">
